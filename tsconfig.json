{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedParameters": true
  },
  "exclude": ["**/dist", "**/node_modules", "**/test"]
}
